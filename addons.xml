<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="plugin.video.bangumi" name="Bangumi beta" version="0.2.0" provider-name="zhengfan">
  <requires>
    <import addon="xbmc.python" version="2.1.0"/>
    <import addon="script.module.xbmcswift2" version="2.4.0"/>
  <import addon="script.module.beautifulsoup4" version="4.5.3"/>
  <import addon="script.module.requests" version="2.19.1"/>
  <import addon="script.module.html5lib" version="0.999.0"/>
  <import addon="script.module.cfscrape" version="1.6.9"/>
  </requires>
  <extension point="xbmc.python.pluginsource" library="addon.py">
    <provides>video</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <platform>all</platform>
    <language></language>
    <description>bangumi插件是一个番剧网站聚合插件，它是vid插件的改进版，为适配番剧网站而生</description>
    <assets>
      <icon>icon.png</icon>
      <fanart>fanart.png</fanart> 
    </assets>
    <news>首个版本</news>
  </extension>
</addon>
<addon id="repository.xbmc-kodi-private-china-addons"
        name="Chinese Add-ons"
        version="1.0.0"
        provider-name="zhengfan2014">
    <extension point="xbmc.addon.repository"
            name="Chinese Add-ons">
        <info compressed="true">https://github.com/FadeJay/xbmc-kodi-private-china-addons/raw/py3/addons.xml</info>
        <checksum>https://github.com/FadeJay/xbmc-kodi-private-china-addons/raw/py3/addons.xml.md5</checksum>
        <datadir zip="true">https://github.com/FadeJay/xbmc-kodi-private-china-addons/raw/py3/repo</datadir>
    </extension>
    <extension point="xbmc.addon.metadata">
        <summary>Chinese Add-ons Repository</summary>
        <summary lang="zh">面向中文用户的插件库</summary>
        <description>xbmc-kodi-private-china-addons is a GitHub repository for Kodi add-ons written and maintained by zhengfan2014. Kodi can be added to play video sites such as Bilibili and mount barrage and other weird functions.</description>
        <description lang="zh">xbmc-kodi-private-china-addons 是一个存放由zhengfan2014编写和维护的Kodi插件的GitHub仓库。可以为Kodi增加播放Bilibili等视频网站和挂载弹幕等奇奇怪怪的功能。</description>
        <disclaimer>I am not responsible for the content provided by the plug-in</disclaimer>
        <disclaimer lang="zh">本人对插件提供的内容不承担责任</disclaimer>
        <platform>all</platform>
        <assets>
            <icon>icon.png</icon>
        </assets>
    </extension>
</addon>
</addons>
